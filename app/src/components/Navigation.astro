---
import type { PageLink } from "../types/Link";

const items: PageLink[] = [
  { text: "TOP", href: "/" },
  { text: "ABOUT", href: "/about" },
];
---

<nav>
  <ul role="list">
    {
      items.map((item) => {
        return (
          <li>
            <a href={item.href}>{item.text}</a>
          </li>
        );
      })
    }
  </ul>
</nav>

<style>
  nav {
    min-height: 3rem;
    display: flex;
  }

  ul {
    list-style: none;
    display: grid;
    gap: 2rem;
  }

  li {
    grid-row: 1;
  }

  a {
    color: #111;
    text-decoration: none;
  }
</style>
